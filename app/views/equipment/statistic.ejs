<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <title>ECharts</title>
    <style type="text/css">
        #leftDiv {
        float: left;
        width: 500px;
        height: 400px;
        }
        #rightDiv {
        float: right;
        width: 700px;
        height: 400px;
        }
        #container {
        width: 1200px;
        height: 400px;
        }
        #leftDiv2 {
        float: left;
        width: 500px;
        height: 400px;
        }
        #rightDiv2 {
        float: right;
        width: 700px;
        height: 400px;
        }
        #container2 {
        width: 1200px;
        height: 400px;
        }
    </style>
</head>
<body>
    <!-- 为ECharts准备一个具备大小（宽高）的Dom -->
    <div id="container">
            <div id="leftDiv"></div>
            <div id="rightDiv"></div>
    </div>
    <div id="container2">
            <div id="leftDiv2"></div>
            <div id="rightDiv2"></div>
    </div>
    <!-- ECharts单文件引入 -->
    <script src="http://echarts.baidu.com/build/dist/echarts.js"></script>
    <script type="text/javascript">
        // 路径配置
        require.config({
            paths: {
                echarts: 'http://echarts.baidu.com/build/dist'
            }
        });
        
        // 使用
        require(
            [
                'echarts',
                'echarts/chart/bar' // 使用柱状图就加载bar模块，按需加载
            ],
            function (ec) {
                // 基于准备好的dom，初始化echarts图表
                var option2 = {
                    tooltip: {
                        show: true
                    },
                    legend: {
                        data:['每月项目数量统计']
                    },
                    xAxis : [
                        {
                            type : 'category',
                            data : ["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]
                        }
                    ],
                    yAxis : [
                        {
                            type : 'value'
                        }
                    ],
                    series : [
                        {
                            "name":"产量",
                            "type":"bar",
                            "data":[5, 20, 40, 10, 10, 20,5, 20, 40, 10, 10, 20]
                        }
                    ]
                };

                var option1 = {
                    title : {
                        text: '项目状态统计',
                        subtext: '',
                        x:'center'
                    },
                    tooltip : {
                        trigger: 'item',
                        formatter: "{a} <br/>{b} : {c} ({d}%)"
                    },
                    legend: {
                        orient : 'vertical',
                        x : 'left',
                        data:['正常','进行中','完成']
                    },
                    toolbox: {
                        show : true,
                        feature : {
                            mark : {show: true},
                            dataView : {show: true, readOnly: false},
                            magicType : {
                                show: true, 
                                type: ['pie', 'funnel'],
                                option: {
                                    funnel: {
                                        x: '25%',
                                        width: '50%',
                                        funnelAlign: 'left',
                                        max: 1548
                                    }
                                }
                            },
                            restore : {show: true},
                            saveAsImage : {show: true}
                        }
                    },
                    calculable : true,
                    series : [
                        {
                            name:'访问来源',
                            type:'pie',
                            radius : '55%',
                            center: ['50%', '60%'],
                            data:[
                                {value:335, name:'正常'},
                                {value:310, name:'进行中'},
                                {value:234, name:'完成'}
                            ]
                        }
                    ]
                };

                var option3 = {
                    title : {
                        text: '设备状态统计',
                        subtext: '',
                        x:'center'
                    },
                    tooltip : {
                        trigger: 'item',
                        formatter: "{a} <br/>{b} : {c} ({d}%)"
                    },
                    legend: {
                        orient : 'vertical',
                        x : 'left',
                        data:['正常状态','维修状态','报废状态']
                    },
                    toolbox: {
                        show : true,
                        feature : {
                            mark : {show: true},
                            dataView : {show: true, readOnly: false},
                            magicType : {
                                show: true, 
                                type: ['pie', 'funnel'],
                                option: {
                                    funnel: {
                                        x: '25%',
                                        width: '50%',
                                        funnelAlign: 'left',
                                        max: 1548
                                    }
                                }
                            },
                            restore : {show: true},
                            saveAsImage : {show: true}
                        }
                    },
                    calculable : true,
                    series : [
                        {
                            name:'访问来源',
                            type:'pie',
                            radius : '55%',
                            center: ['50%', '60%'],
                            data:[
                                {value:335, name:'正常状态'},
                                {value:310, name:'维修状态'},
                                {value:234, name:'报废状态'}
                            ]
                        }
                    ]
                };

                var option4 = {
                    tooltip: {
                        show: true
                    },
                    legend: {
                        data:['每月设备生产量统计']
                    },
                    xAxis : [
                        {
                            type : 'category',
                            data : ["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]
                        }
                    ],
                    yAxis : [
                        {
                            type : 'value'
                        }
                    ],
                    series : [
                        {
                            "name":"产量",
                            "type":"bar",
                            "data":[5, 20, 40, 10, 10, 20,5, 20, 40, 10, 10, 20]
                        }
                    ]
                };


                var myChart = ec.init(document.getElementById('leftDiv')); 
                myChart.setOption(option1); 

                var myChart2 = ec.init(document.getElementById('rightDiv')); 
                myChart2.setOption(option2); 

                var myChart3 = ec.init(document.getElementById('leftDiv2')); 
                myChart3.setOption(option3);

                var myChart3 = ec.init(document.getElementById('rightDiv2')); 
                myChart3.setOption(option4);
            }
        );
    </script>
</body>